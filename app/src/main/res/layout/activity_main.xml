<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.mjchartdemo.MainActivity">

    <com.example.mjchartdemo.been.CommonToolbar
        android:id="@+id/common_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/blue"
        app:isShowRightButton="true"
        app:isShowTitle="true">

    </com.example.mjchartdemo.been.CommonToolbar>

    <RelativeLayout
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/sys_message_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@mipmap/set_ip_config" />

        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/sys_message_img"
            android:textColor="@color/black"
            android:text="系统消息"
            android:gravity="center_vertical"
            android:textSize="22sp"/>



    </RelativeLayout>


    <ListView
        android:id="@+id/lv_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/tv_dedede"
        android:dividerHeight="2dp">

    </ListView>
</LinearLayout>
